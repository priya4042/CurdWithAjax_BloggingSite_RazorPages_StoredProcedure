@page
@model BloggingSite_RazorPages_StoredProcedure.Pages.PostsModel
@{
}

<script src="~/js/jquery-3.6.0.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/ckeditor/ckeditor.js"></script>


<h2>Create Post</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="post.Title" class="control-label"></label>
                <input asp-for="post.Title" class="form-control" />
                <span asp-validation-for="post.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="post.Description" class="control-label"></label>
                <textarea class="ckeditor" asp-for="post.Description" ></textarea>
            </div>
            <div class="form-group">
                <label asp-for="post.UserName" class="control-label"></label>
                <input asp-for="post.UserName" class="form-control" />
                <span asp-validation-for="post.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Blog" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="IndexPages">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $(document).ready(function () {
        ckeditor.replace('#Description');
        <button class="btn btn-primary" type="submit" asp-action="Create" asp-controller="CheckEditor">Save</button>

    })
</script>

}

