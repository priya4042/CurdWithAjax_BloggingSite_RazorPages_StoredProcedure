@page
@model BloggingSite_RazorPages_StoredProcedure.Pages.PostEditModel
@{
}
<h2>Update Post</h2>
<hr />
<script src="~/js/jquery-3.6.0.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/ckeditor/ckeditor.js"></script>


<form asp-page-handler="PostEdit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="post.PostId" />

    <div class="container rounded border ">
        <div class="form-group row p-2 m-2">
            <div class="col-3">
                <label asp-for="post.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="post.Title" class="form-control" />
                <span asp-validation-for="post.Title" class="text-danger"></span>
            </div>


        </div>

        <div class="form-group row p-2 m-2">
            <div class="col-3">
                <label asp-for="post.Description"></label>
            </div>
            <div class="col-6">
                <textarea class="ckeditor" asp-for="post.Description" ></textarea>
                <span asp-validation-for="post.Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row p-2 m-2">
            <div class="col-3">
                <label asp-for="post.UserName"></label>
            </div>
            <div class="col-6">
                <input asp-for="post.UserName" class="form-control" />
                <span asp-validation-for="post.UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row p-2 m-2">
            <div class="col-3 offset-3">
                <input type="submit" value="Save" class="btn btn-outline-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="./IndexPages" class="btn btn-outline-danger form-control">Back To List</a>


            </div>
        </div>
    </div>

</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    $(document).ready(function () {
        ckeditor.replace('#Description');
        <button class="btn btn-primary" type="submit" asp-action="Create" asp-controller="CheckEditor">Save</button>

    })
</script>